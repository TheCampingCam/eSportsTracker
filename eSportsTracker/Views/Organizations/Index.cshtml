@model IEnumerable<eSportsTracker.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Session["LoggedIn"] != null)
    {
    @Html.ActionLink("Create New", "Create")}
</p>
<table class="table">
    <tr>
        @{if (Session["LoggedIn"] != null)
        {
            <th>
                @Html.DisplayNameFor(model => model.OrgID)
            </th>
        }}
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @{if (Session["LoggedIn"] != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.OrgID)
            </td>
        }}
        <td>
            @Html.DisplayFor(modelItem => item.OrgName)
        </td>
        <td>
            @{ if (Session["LoggedIn"] != null)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.OrgID }) <text>|</text>
                @Html.ActionLink("Details", "Details", new { id = item.OrgID }) <text>|</text>
                @Html.ActionLink("Delete", "Delete", new { id = item.OrgID })
        }
            }
        </td>
    </tr>
                }

</table>
