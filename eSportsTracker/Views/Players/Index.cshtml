@model IEnumerable<eSportsTracker.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Session["LoggedIn"] != null)
    {
    @Html.ActionLink("Create New", "Create")}
</p>

<form>
    <p>
        Handle: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>
        @{if (Session["LoggedIn"] != null)
        {
            <th>
                @Html.DisplayNameFor(model => model.PlayerID)
            </th>
        }}
        <th>
            @Html.DisplayNameFor(model => model.Handle)
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @{if (Session["LoggedIn"] != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.PlayerID)
            </td>
        }}
        <td>
            @Html.DisplayFor(modelItem => item.Handle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LName)
        </td>
        <td>
            @{
            if (Session["LoggedIn"] != null)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }) <text>|</text>
                @Html.ActionLink("Details", "Details", new { id = item.PlayerID }) <text>|</text>
                @Html.ActionLink("Delete", "Delete", new { id = item.PlayerID })
        }

            }
        </td>
    </tr>
}

</table>
